@using Microsoft.AspNet.Identity
@model Optica.Models.ManageUserViewModel


@section myHeadStyle {
        <style type="text/css">
            .MyLabel {
                text-align:left;
            }
        </style>
    }

<div class="box box-primary">
    <div class="box-header"><h4><u>Formulaire de modification du mot de passe</u></h4></div>
    <div class="box-body">
        <p> <h4>Vous êtes connecté en tant que <strong>@User.Identity.GetUserName()</strong>.</h4></p>
        @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken() 
            <hr />
            @Html.ValidationSummary("", new { @class="text-danger"})
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label", style = "text-align:left;" })
                <div class="col-md-5">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label", style = "text-align:left;" })
                <div class="col-md-5">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", style="text-align:left;" })
                <div class="col-md-5">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-7">
                    <input type="submit" value="Modifier le mot de passe" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>



