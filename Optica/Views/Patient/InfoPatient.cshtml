@model Optica.Models.Patient

@section myHeadStyle {
    <style type="text/css">
        .titre{
            padding-right:5px;
        }
        .boxbody{
            padding:10px 0;
        }
    </style>
    }

@if (Model != null && Model.Id > 0)
{
   <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Patient</h3>
      </div>
      <div class="panel-body" style="padding: 10px 0;">
          <div class="row">
                  <span class="col-xs-4 titre">N&ordm; mat.</span>
                  <span>@Model.NumMat</span>
              </div>
              <div class="row">
                  <span class="col-xs-4 titre">Nom</span>
                  <span style="text-align:center">@(Model.Nom + " " + Model.Prenom)</span>
              </div>
              <div class="row">
                  <span class="col-xs-4 titre">Contact</span>
                  <span>@Model.Contact</span>
              </div>
              <div class="row">
                  <span class="col-xs-4 titre">Adresse</span>
                  <span>-</span>
              </div>
      </div>
    </div>
}
else
{
    <h4 style="color:red;">Erreur! patient inexistant</h4>
}
