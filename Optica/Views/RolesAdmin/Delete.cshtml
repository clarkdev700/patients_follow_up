@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete";
    ViewBag.Titre = "Profils";
}


@section filedeNavigation {
    <li><a href="#">Param&egrave;tre</a></li>
    <li>@Html.ActionLink("Profils", "Index", "RolesAdmin")</li>
    <li class="active">Supprimer</li>
}



<div class="row">
    <div class="box box-primary">
        <div class="box-header">
            <h3 style="text-decoration:underline; font-style:italic">Supprimer</h3>
        </div>
        <div class="box-body">
            <h4 class="alert alert-danger">
              Voulez vous vraiment supprimer le Profil <strong>@Model.Name</strong>  ainsi que les comptes utilisateurs li&eacute;s?
            </h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Oui" class="btn btn-default" />
                    @Html.ActionLink("Non", "Index", new { }, new { @class="btn btn-default"})
                </div>
            }
        </div>
    </div>
</div>

