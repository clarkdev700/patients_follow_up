
<div class="row">
    <div class="box box-primary">
        <div class="box-header"></div>
        <div class="box-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Optica.Models.Assurance a in ViewBag.assurances)
                    {
                        <tr>
                            <td>@a.Code</td>
                            <td>@a.Nom</td>
                            <td><a href="@Url.RouteUrl("_updateAssurance", new { id = a.Id })" title="editer"><i class="glyphicon glyphicon-edit"></i></a></td>
                            <td><a href="#" title="supprimer"><i class="glyphicon glyphicon-remove"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div> 
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#parametres").addClass("active");
            $("#assurance").addClass("active");
        });
    </script>
}