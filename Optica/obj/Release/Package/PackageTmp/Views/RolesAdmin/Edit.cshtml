@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Edition";
    ViewBag.Titre = "Profils";
}


@section filedeNavigation {
    <li><a href="#">Param&egrave;tre</a></li>
    <li>@Html.ActionLink("Profils", "Index", "RolesAdmin")</li>
    <li class="active">Edition</li>
}

<div class="row">
    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header">
                <h3 style="text-decoration:underline; font-style:italic">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @*<h4>Roles</h4>
                        <hr />*@
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, "Libellé", new { @class = "control-label col-md-2" })
                            <div class="col-sm-6">
                                @*Html.EditorFor(model => model.Name)*@
                                @Html.TextBoxFor(model => model.Name,new { @class="form-control"})
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-6">
                                <input type="submit" value="Valider" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>   
</div>




